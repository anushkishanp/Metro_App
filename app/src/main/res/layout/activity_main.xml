<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anushkishan.metro.MainActivity"
    android:background="@drawable/m">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="METRIO"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:textSize="55dp"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOURCE"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="40dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimaryDark"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESTINATION"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="7dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="?attr/colorPrimaryDark" />

    <Button
        android:id="@+id/b4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginBottom="119dp"
        android:background="@drawable/info_iicon"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:width="160dp"
        android:height="70dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contextClickable="true"
        android:elevation="24dp"
        android:onClick="showalert"
        android:text="BUY TICKETS"
        android:textColor="@android:color/background_light"
        android:textSize="21dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO. OF TICKETS"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="340dp"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s1"
        android:layout_marginStart="250dp"
        android:layout_marginTop="223dp"
        android:entries="@array/a1"
        android:background="?attr/colorButtonNormal" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_marginStart="250dp"
        android:entries="@array/a2"
        android:background="?attr/colorButtonNormal"
        android:id="@+id/s2"></Spinner>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="3"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="335dp"
        android:id="@+id/editText"
        android:text="1"
        android:textColor="@android:color/white" />
</RelativeLayout>